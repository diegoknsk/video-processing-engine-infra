# Root Terraform — Video Processing Engine Infra
# required_version e provider AWS; execução padrão a partir de terraform/

terraform {
  required_version = ">= 1.0"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }
}

provider "aws" {
  region = var.region
}
